@model List<Contact>

@*
    Last Messages Component Partial
*@

<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Recent Purchases</p>
                <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Mail Adresi</th>
                                <th>Mesaj</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.ContactId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Mail</td>
                                <td>
                                    @Html.Raw(item.Message.Length > 30
                                                                        ? item.Message.Substring(0, 30) + "... <a href=\"/Contact/ContactDetail/" + item.ContactId + "\">Devamını Oku</a>"
                                                                        : item.Message)
                                </td>

                                    <td>@item.Date.ToShortDateString()</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>