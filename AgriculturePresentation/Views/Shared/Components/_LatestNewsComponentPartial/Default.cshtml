@model List<Announcement>

@*
    Latest News Component Partial
*@

<!--blog -->

<div class="blog" id="blog">
    <div class="container">
        <h3 class="tittle">Son Haberler</h3>
        <p class="heading-btm-w3ls">
            Yeni haftanın ilk günü itibarıyla, beklenen enerji zirvesinden önemli kararlar çıktı ve piyasalar bu gelişmeye hızla tepki verdi.
        </p>
        @{
            int deger = 0;
        }
        @foreach (var item in Model)
        {
            @if (deger == 1 || deger == 4 || deger == 7 || deger == 10)
            {
                <div class="blog-grid-w3-agileits">
                    <div class=" col-md-5 blog-info-w3layouts blog-mid">
                        <h6><a href="#" data-toggle="modal" data-target="#@item.AnnouncementID">@item.Title</a></h6>
                        <div class="inner-info-mid">
                            <a href="#" class="blog-text-w3ls mid-bar" target="#@item.AnnouncementID">Tarih</a><span>@item.Date</span>
                            <p class="para-w3-agileits">@item.Description</p>
                        </div>
                        <a href="#" class="blog-more-agile" data-toggle="modal" data-target="#@item.AnnouncementID">Daha Fazlasını Oku</a>

                    </div>
                    <div class=" col-md-7 blog-@item.ImageUrl-agileits-w3layouts">
                        <a href="#" data-toggle="modal" data-target="#@item.AnnouncementID"></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
            }
            else
            {
                <div class="blog-grid-w3-agileits">
                    <div class=" col-md-7 blog-@item.ImageUrl-agileits-w3layouts">
                        <a href="#" data-toggle="modal" data-target="#@item.AnnouncementID"></a>
                    </div>
                    <div class=" col-md-5 blog-info-w3layouts">
                        <h6> <a href="#" data-toggle="modal" data-target="#@item.AnnouncementID">@item.Title</a></h6>
                        <div class="inner-info">
                            <a href="#" class="blog-text-w3ls bar">Tarih</a><span>@item.Date    </span>
                            <p class="para-w3-agileits">@item.Description</p>
                        </div>
                        <a href="#" class="blog-more-agile" data-toggle="modal" data-target="#myModal2">Daha Fazlasını Oku</a>

                    </div>
                    <div class="clearfix"></div>
                </div>
            }
            deger++;
        }
    </div>
</div>

@foreach(var item in Model)
{
    <div class="modal fade" id="#@item.AnnouncementID" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4>Hasat'da</h4>
                    <img src="images/b1.jpg" alt="resim" class="img-responsive">
                    <h5>@item.Title</h5>
                    <p>@item.Description</p>
                </div>
            </div>
        </div>
    </div>
}