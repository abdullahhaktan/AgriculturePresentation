@model Address

@*
    Header Component Partial
*@

<div class="header">
    <div class="container">
        <div class="w3l_header_left">
            <ul>
                <li><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>@Model.Description1 @Model.Description2 @Model.Description3</li>
                <li><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> @Model.PhoneNumber </li>
                <li>
                    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                    <a href="mailto:info@example.com">abdullahhaktan9@gmail.com</a>
                </li>
            </ul>

            @* ▼▼▼ Burada ViewBag kontrolünü ekledim ▼▼▼ *@
            @if (ViewBag.error != null)
            {
                <div style="color:#ffb3b3; margin-top:10px; font-weight:bold;">
                    Mesajınız gönderilemedi detay için aşağıyı kontrol ediniz
                </div>
            }
            @if (TempData["success"] != null)
            {
            <div style="color:aqua; margin-top:10px; font-weight:bold;">
                Mesajınız başarıyla gönderildi
            </div>
            }

        </div>

        @await Component.InvokeAsync("_SocialMediaComponentPartial")

        <div class="clearfix"></div>
    </div>
</div>
