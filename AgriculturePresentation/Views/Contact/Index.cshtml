@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Duyurular</h4>
                    <p class="card-description">
                        Duyurular
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kişi</th>
                                    <th>Mail Adresi</th>
                                    <th>Mesaj</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td><a class="btn btn-outline-success" href="/Contact/ContactDetail/@item.ContactId">@(item.Message.Length>20 ? item.Message.Substring(0,20)+"...   devamını oku" : item.Message )</a> </td>
                                        <td><a class="btn btn-outline-danger" href="/Contact/DeleteContact/@item.ContactId">Sil</a></td>
                                        <td><a class="btn btn-outline-dark" href="/Contact/UpdateContact/@item.ContactId">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>