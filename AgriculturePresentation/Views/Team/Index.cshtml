@model List<Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Takım</h4>
                    <p class="card-description">
                        Takımımız
                    </p>
                    <div class="table table-responsive">
                        <table class="table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Ünvan</th>
                                    <th>Image Url</th>
                                    <th>Facebook url</th>
                                    <th>İnstagram url</th>
                                    <th>Twitter url</th>
                                    <th>Website url</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">Kayıtlı takım bulunmamaktadır.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                <img src="@item.ImageUrl" alt="image" />
                                            </td>
                                            <td>@item.TeamId</td>
                                            <td>@item.Title</td>
                                            <td>@item.ImageUrl</td>
                                            <td>@item.FacebookUrl</td>
                                            <td>@item.InstagramUrl</td>
                                            <td>@item.TwitterUrl</td>
                                            <td>@item.WebsiteUrl</td>
                                            <td><a class="btn btn-outline-danger" href="/Team/DeleteTeam/@item.TeamId">Sil</a></td>
                                            <td><a class="btn btn-outline-dark" href="/Team/UpdateTeam/@item.TeamId">Güncelle</a></td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                        <br />
                        <br />
                        <a href="/Team/AddTeam" class="btn btn-outline-info">Yeni üye Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>