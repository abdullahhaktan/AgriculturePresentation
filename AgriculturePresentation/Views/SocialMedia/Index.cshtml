@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sosyal Medya Hesapları</h4>
                    <p class="card-description">
                        Hesaplar
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Sosyal Medya</th>
                                    <th>Icon</th>
                                    <th>Url</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Icon</td>
                                        <td><a class="btn btn-outline-danger" href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId">Sil</a></td>
                                        <td><a class="btn btn-outline-dark" href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>