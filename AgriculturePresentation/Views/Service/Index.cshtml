@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmetler</h4>
                    <p class="card-description">
                        Hizmetlerimiz
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ServiceID</td>
                                        <td>@item.Title</td>
                                        <td><a class="btn btn-outline-danger" href="/Service/DeleteService/@item.ServiceID">Sil</a></td>
                                        <td><a class="btn btn-outline-dark" href="/Service/UpdateService/@item.ServiceID">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Service/AddService" class="btn btn-outline-info">Yeni Hizmet Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>